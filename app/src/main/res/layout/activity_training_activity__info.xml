<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#ffffff"
    tools:context="com.rohan.admin.loginapp1.TrainingActivity_Info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/activitydate"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/list1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/rname"
        android:visibility="gone"
        android:layout_alignTop="@+id/list1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/activitybranch"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list1"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/rollno"
        android:visibility="gone"
        android:layout_below="@+id/rname"
        android:layout_alignStart="@+id/rname"
        android:layout_marginTop="99dp" />
    <Button
        android:id="@+id/reg_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff6861"
        android:text="Register for Activity"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/rollno" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activityname"
        android:layout_alignEnd="@+id/pdfbutton"
        android:layout_marginEnd="29dp"
        android:visibility="gone"
        android:id="@+id/urlname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/activityname"
        android:visibility="visible"
        android:textSize="20dp"
        android:shadowColor="#7000"
        android:shadowDx="12"
        android:shadowRadius="8"
        android:shadowDy="12"
        android:layout_below="@+id/activitydate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="view pdf"
        android:layout_width="200dp"
        android:layout_height="30dp"

        android:layout_below="@id/list1"
        android:textAllCaps="false"
        android:id="@+id/pdfbutton"

        android:textColor="#ff6861"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_all"
     
        android:layout_centerHorizontal="true" />


</RelativeLayout>
