    android:layout_height="fill_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    >

    <TextView
        android:id="@+id/message11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.10"
