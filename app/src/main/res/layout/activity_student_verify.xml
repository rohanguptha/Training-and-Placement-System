<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="#ffffff"
    tools:context="com.rohan.admin.loginapp1.Student_verify">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/student_verify"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="welcome"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />
     <Button
    android:id="@+id/s_reg_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
         android:background="#ff6861"
    android:text="@string/btn_register"
         android:onClick="showGreeting"
    android:textColor="@color/white"
         android:layout_centerVertical="true"
         android:layout_alignParentStart="true" />

    <Button
        android:onClick="showGreeting"
        android:id="@+id/btnLogoutstu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_logut_bg"
        android:text="@string/btn_logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/verify_rollno"
        android:visibility="gone"
        android:layout_above="@+id/btnLogoutstu"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="52dp" />


</RelativeLayout>
