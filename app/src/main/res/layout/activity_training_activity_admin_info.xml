<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#ffffff"
    tools:context="com.rohan.admin.loginapp1.TrainingActivity_Info">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list1"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="docname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activityname"
        android:layout_toEndOf="@+id/activityname"
        android:layout_marginStart="96dp"
        android:visibility="gone"
        android:id="@+id/docname" />

    <Button
        android:text="view pdf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:layout_below="@id/list1"
        android:layout_marginEnd="13dp"
        android:textAllCaps="false"
        android:id="@+id/button"

        android:textColor="#ff6861"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/activityname"
        android:visibility="visible"
        android:textSize="20dp"
        android:shadowColor="#7000"
        android:shadowDx="12"
        android:shadowRadius="8"
        android:shadowDy="12"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


</RelativeLayout>
